<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3 http://maven.apache.org/xsd/component-1.1.3.xsd">
  <!-- Assembly configuration shared between all product (-redhat.xml) assemblies -->
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/banner</directory>
      <outputDirectory>banner</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/img</directory>
      <outputDirectory>img</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/fonts</directory>
      <outputDirectory>fonts</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/styles</directory>
      <outputDirectory>styles</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/resources</directory>
      <outputDirectory>WEB-INF/classes</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/productized/webapp</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>
</component>
